body
    background: url(http://cdn.leagueoflegends.com/lolkit/1.1.6/resources/images/bg-default.jpg) no-repeat center
    background-attachment: fixed
    height: 100vh
    width: 100vw

.blackBackground
    background: rgba(0, 0, 0, 0.5);
    position: fixed
    height: 100%
    width: 100%
    top: 0px
    left: 0px

.container
    margin: 0 auto
    padding-top: 30px
    display: flex
    flex-wrap: wrap
    flex-direction: row
    justify-content: space-around
    width: 1000px

.model
    position: relative
    width: 300px
    display: inline-block
    margin-bottom: 15px
    float: left

.screen img
    width: 100%
    position: relative

.streamerTitle
    background: rgba(0, 0, 0, 0.8)
    position: relative
    color: white
    display: flex
    align-items: center

.streamerImg
    width: 50px
    height: 50px
    overflow: hidden
    border-radius: 50%
    margin: 10px

.streamerImg img
    width: 100%

.streamerInfo 
    width: 75%
    white-space: nowrap
    overflow: hidden    
    text-overflow: ellipsis


.streamerInfo p 
    margin: 10px

       